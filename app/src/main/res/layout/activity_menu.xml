<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbarTrackHorizontal="@android:drawable/button_onoff_indicator_off">

    <!-- Logo ở góc trên bên trái -->

    <!-- Mục menu Đăng nhập/Tạo tài khoản -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="47dp"
            android:layout_height="46dp"
            android:contentDescription="Logo"
            android:src="@mipmap/logo" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/view_gradient" />

        <Button
            android:id="@+id/btn_menuDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            android:drawableTint="@color/gray"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Đăng nhập/ Tạo tài khoản"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:textStyle="bold"
            app:iconTint="@color/gray" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C5C5C5"
            android:backgroundTint="#C5C5C5" />

        <Button
            android:id="@+id/btn_menuTGS"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_star_24"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            android:drawableTint="@color/gray"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Tin gắn sao"
            android:textAlignment="viewStart"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:iconTint="@color/gray"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="406dp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C5C5C5"
            android:backgroundTint="#C5C5C5" />

        <Button
            android:id="@+id/btn_menuDS"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_history_toggle_off_24"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            android:drawableTint="@color/gray"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Đọc sau"
            android:textAlignment="viewStart"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:iconTint="@color/gray"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="406dp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C5C5C5"
            android:backgroundTint="#C5C5C5" />

        <Button
            android:id="@+id/btn_menuCD"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_settings_24"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            android:drawableTint="@color/gray"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Cài đặt"
            android:textAlignment="viewStart"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:iconTint="@color/gray"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="406dp" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C5C5C5"
            android:backgroundTint="#C5C5C5" />

        <Button
            android:id="@+id/btn_menuGYK"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_drive_file_move_24"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            android:drawableTint="@color/gray"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Gửi ý kiến"
            android:textAlignment="viewStart"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:iconTint="@color/gray" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C5C5C5"
            android:backgroundTint="#C5C5C5" />
        <Button
            android:id="@+id/btn_menuTT"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_cloudy_snowing_24"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            android:drawableTint="@color/gray"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Thời tiết"
            android:textAlignment="viewStart"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:iconTint="@color/gray" />

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C5C5C5"
            android:backgroundTint="#C5C5C5" />

    </LinearLayout>


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/btm_nav" />


</androidx.constraintlayout.widget.ConstraintLayout>